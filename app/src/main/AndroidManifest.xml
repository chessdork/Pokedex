<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.chessdork.smogon" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_smogon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SmogonActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayPokemonActivity"
            android:label="@string/app_name"
            android:parentActivityName=".SmogonActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.chessdork.smogon.SmogonActivity" />
        </activity>
    </application>

</manifest>
