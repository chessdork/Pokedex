<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>

        <!-- Set AppCompatâ€™s color theme attrs -->
        <item name="colorPrimary">@color/purple</item>
    </style>

    <style name="ActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/purple</item>
    </style>

    <style name="NameLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- List View styles -->

    <style name="ListViewHeaderText">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ListViewDescriptionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ListViewDescriptionText.Large">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EmptyListViewText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Table styles -->

    <style name="CellText">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/half_margin</item>
    </style>

    <style name="TableHeaderText">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:background">@drawable/red_border</item>
    </style>

    <style name="TableHeaderText.Vertical">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/green_border</item>
    </style>

    <!-- Dex list styles -->

    <style name="StatDexDescriptor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="StatDexLayout">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StatTextSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Display pokemon activity -->

    <style name="StatRectangle">
        <item name="android:background">@drawable/stat_rectangle</item>
        <item name="android:layout_marginLeft">@dimen/stat_bar_horizontal_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="StatDescriptorText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="StatText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="MovesetList">
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Display Types Fragment -->

    <style name="Matchups">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/half_margin</item>
    </style>

    <style name="Matchups.Good">
        <item name="android:background">@drawable/green_bubble</item>
    </style>

    <style name="Matchups.Bad">
        <item name="android:background">@drawable/red_bubble</item>
    </style>

    <style name="MatchupHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/half_margin</item>
        <item name="android:layout_marginLeft">@dimen/half_margin</item>
        <item name="android:layout_marginRight">@dimen/half_margin</item>
    </style>

    <style name="MatchupHeader.Good">
        <item name="android:textColor">@color/green_text</item>
    </style>

    <style name="MatchupHeader.Bad">
        <item name="android:textColor">@color/red_text</item>
    </style>

    <style name="FlowLayout">
        <item name="horizontalSpacing">@dimen/quarter_margin</item>
        <item name="verticalSpacing">@dimen/quarter_margin</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/half_margin</item>
        <item name="android:layout_marginLeft">@dimen/half_margin</item>
        <item name="android:layout_marginRight">@dimen/half_margin</item>
    </style>

    <style name="FlowLayout.Immunity">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">@dimen/half_margin</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ImmunityText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">@dimen/half_margin</item>
    </style>

    <!-- Rounded corners galore -->

    <style name="CategoryImage">
        <item name="android:layout_width">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="TypeText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TypeText.Large">
        <item name="android:layout_width">80dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TypeText.Large.Vertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TagText" parent="TypeText">
        <item name="android:background">@drawable/purple_bubble</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="TagText.Large">
        <item name="android:layout_width">80dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
